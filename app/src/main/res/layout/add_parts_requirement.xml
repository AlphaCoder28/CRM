<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_8"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="75dp">-->

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/sp_custName"
                style="@style/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/dp_12"
                app:smsp_hint="Search Customer Name"
                app:smsp_isSearchable="true"
                app:smsp_multilineError="false"
                android:visibility="visible"
                app:smsp_searchHeaderBackgroundColor="@color/colorPrimary"
                app:smsp_searchHeaderText="Customer Name"
                app:smsp_searchHeaderTextColor="@color/white"
                app:smsp_searchHintColor="@color/primaryGray"
                app:smsp_searchTextColor="@color/fontDarkText" />

            <TextView
                android:id="@+id/txtPartsReqCustName"
                style="@style/large_light_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/dash"
                android:visibility="gone"
                android:textAlignment="textStart" />

<!--            </RelativeLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Number" />

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="75dp">-->

                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/sp_tktNumber"
                    style="@style/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="@dimen/dp_12"
                    app:smsp_hint="Search Ticket Number"
                    android:visibility="visible"
                    app:smsp_isSearchable="true"
                    app:smsp_multilineError="false"
                    app:smsp_searchHeaderBackgroundColor="@color/colorPrimary"
                    app:smsp_searchHeaderText="Ticket Number"
                    app:smsp_searchHeaderTextColor="@color/white"
                    app:smsp_searchHintColor="@color/primaryGray"
                    app:smsp_searchTextColor="@color/fontDarkText" />

                <TextView
                    android:id="@+id/txtPartsReqTicketNumber"
                    style="@style/large_light_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/dash"
                    android:visibility="gone"
                    android:textAlignment="textStart" />

<!--            </RelativeLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number" />

            <TextView
                android:id="@+id/txtContactNumber"
                style="@style/large_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/dash"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address" />

            <TextView
                android:id="@+id/txtAddress"
                style="@style/large_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/dash"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Status" />

            <TextView
                android:id="@+id/txtTktStatus"
                style="@style/large_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/dash"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Parts" />


            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/sp_selectPart"
                style="@style/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/dp_12"
                app:smsp_hint="Search Parts"
                app:smsp_isSearchable="true"
                app:smsp_multilineError="false"
                app:smsp_searchHeaderBackgroundColor="@color/colorPrimary"
                app:smsp_searchHeaderText="Parts Name"
                app:smsp_searchHeaderTextColor="@color/white"
                app:smsp_searchHintColor="@color/primaryGray"
                app:smsp_searchTextColor="@color/fontDarkText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/medium_txt_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:text="Required Quantity" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPartsQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/dp_2" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvAddItem"
                style="@style/medium_txt_white"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:background="@drawable/rounded_primary_background"
                android:gravity="center"
                android:text="ADD ITEM"
                android:textAllCaps="false" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llPartsAddedMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/black"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/medium_txt_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.2"
                    android:background="@color/mediumGray"
                    android:gravity="center"
                    android:text="Part Name" />

                <TextView
                    style="@style/medium_txt_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.9"
                    android:background="@color/mediumGray"
                    android:gravity="center"
                    android:text="Quantity" />

                <TextView
                    style="@style/medium_txt_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="0.9"
                    android:background="@color/mediumGray"
                    android:gravity="center"
                    android:text="Delete" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListAddParts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/parts_added_item_row">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSubmit"
            style="@style/medium_txt_white"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_32"
            android:background="@drawable/rounded_primary_background"
            android:gravity="center"
            android:text="SUBMIT" />

    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
