<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/large_txt_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Tickets"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/dp_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/dp_4"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="45dp"
                                android:text="Open Tickets"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_Open_ticket"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="45dp"
                                android:text="Assigned Tickets"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_Assign_ticket"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginRight="45dp"
                                android:layout_centerVertical="true"
                                android:text="Re-Assign Tickets"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_Reassign_ticket"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="45dp"
                                android:text="Processed Tickets"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_processed_ticket"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="Closed Tickets"
                                android:layout_marginRight="45dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_Closed_ticket"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_6"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:elevation="@dimen/dp_4"
                        android:backgroundTint="#FF5D5D"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <TextView
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="Assign Pending"
                                android:layout_marginRight="45dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#414141"
                                app:cardCornerRadius="18dp">


                                <TextView
                                    android:id="@+id/tv_Pending_Assign"
                                    style="@style/large_txt_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_12"
                    app:cardCornerRadius="@dimen/dp_4"
                    android:elevation="@dimen/dp_4"
                    android:backgroundTint="#FF5D5D">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_8">

                        <TextView
                            style="@style/large_txt_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="45dp"
                            android:text="Rejected Tickets by Service Engineer"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="#414141"
                            app:cardCornerRadius="18dp">


                            <TextView
                                android:id="@+id/tv_Rejected_ticket"
                                style="@style/large_txt_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/large_txt_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Analysis"
                    android:textColor="#868686"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/dp_16"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlAnalysisChart"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/idBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <data>

        <variable
            name="viewmodelHome"
            type="com.goldmedal.crm.ui.dashboard.home.HomeViewModel" />

    </data>

</layout>