                    <RadioButton
                        android:id="@+id/radio_button_yes_replacement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_yes" />

                    <RadioButton
                        android:id="@+id/radio_button_no_replacement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_no" />


                </RadioGroup>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llUploadReplacementQrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon_width"
                android:layout_height="@dimen/small_icon_height"
                android:layout_margin="@dimen/dp_4"
                app:srcCompat="@drawable/ic_add_photo" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_6"
                    android:padding="@dimen/dp_4"
                    android:text="@string/str_upload_replacement_qrcode" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/widget_replacement_QrCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:id="@+id/imvReplacementQrPlaceHolder"
                                android:layout_width="@dimen/medium_icon_width"
                                android:layout_height="@dimen/medium_icon_height"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dp_4"
                                android:padding="@dimen/dp_4"
                                app:srcCompat="@drawable/qr_code_placeholder"
                               />

                        </RelativeLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_replacement_QrCode"
                            android:layout_width="@dimen/dp_140"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/str_replacement_QrCode"
                            android:textAllCaps="false" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_QrCode_replacement_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llGenerateInvoiceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon_width"
                android:layout_height="@dimen/small_icon_height"
                android:layout_margin="@dimen/dp_4"
                android:padding="@dimen/dp_4"
                app:srcCompat="@drawable/check_mark_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_6"
                    android:padding="@dimen/dp_4"
                    android:text="@string/str_generate_invoice" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pdf"
                        style="@style/large_medium_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/dp_4"
                        android:visibility="gone"
                        android:lines="2"
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center"
                        android:text="@string/str_pdf_already_generated" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_generate_invoice"
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:visibility="visible"
                        android:text="Generate"
                        android:textAllCaps="false">

                    </com.google.android.material.button.MaterialButton>

                </LinearLayout>

                    <TextView
                        android:id="@+id/tvScanAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorRed"
                        android:layout_margin="@dimen/dp_4"
                        android:text="You can select the product." />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGenerateInvoiceAgainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon_width"
                android:layout_height="@dimen/small_icon_height"
                android:layout_margin="@dimen/dp_4"
                android:padding="@dimen/dp_4"
                app:srcCompat="@drawable/check_mark_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_6"
                    android:padding="@dimen/dp_4"
                    android:text="@string/str_generate_invoice_again" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroupGenerateInvAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/radio_btn_yes_generate_again"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_yes" />

                        <RadioButton
                            android:id="@+id/radio_btn_no_generate_again"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_no" />


                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>